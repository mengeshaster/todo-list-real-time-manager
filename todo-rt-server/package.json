    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.0",
        "@types/express": "^4.17.0",
        "@types/jsonwebtoken": "^9.0.0",
        "@types/node": "^20.8.0",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "eslint": "^8.50.0",
